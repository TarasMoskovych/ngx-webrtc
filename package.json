{
  "name": "ngx-webrtc",
  "version": "20.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:with-href": "ng build --base-href /ngx-webrtc/",
    "build:lib": "ng build --project ngx-webrtc-lib",
    "watch": "ng build --watch --configuration development",
    "publish": "cd ./dist/ngx-webrtc-lib && npm publish",
    "test:app": "ng test --project ngx-webrtc",
    "test:lib": "ng test --project ngx-webrtc-lib",
    "test:ci": "ng test --watch=false --coverage",
    "lint": "ng lint",
    "postinstall": "npm ci --prefix ./projects/ngx-webrtc-lib",
    "serve:ssr:ngx-webrtc": "node dist/ngx-webrtc/server/server.mjs"
  },
  "dependencies": {
    "@angular/animations": "^21.1.2",
    "@angular/cdk": "^21.1.2",
    "@angular/common": "^21.1.2",
    "@angular/compiler": "^21.1.2",
    "@angular/core": "^21.1.2",
    "@angular/forms": "^21.1.2",
    "@angular/material": "^21.1.2",
    "@angular/platform-browser": "^21.1.2",
    "@angular/platform-browser-dynamic": "^21.1.2",
    "@angular/platform-server": "^21.1.2",
    "@angular/router": "^21.1.2",
    "@angular/ssr": "^21.1.2",
    "express": "^4.18.2",
    "ngx-webrtc-lib": "^20.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "21.1.0",
    "@angular-eslint/eslint-plugin": "21.1.0",
    "@angular-eslint/eslint-plugin-template": "21.1.0",
    "@angular-eslint/schematics": "21.1.0",
    "@angular-eslint/template-parser": "21.1.0",
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.2",
    "@types/express": "^4.17.17",
    "@types/node": "^20.17.19",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "husky": "^4.3.8",
    "jsdom": "^27.4.0",
    "ng-packagr": "^21.1.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
