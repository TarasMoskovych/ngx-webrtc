{
  "name": "ngx-webrtc",
  "version": "18.2.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "dev:ssr": "ng run ngx-webrtc:serve-ssr",
    "serve:ssr": "node dist/ngx-webrtc/server/main.js",
    "build": "ng build",
    "build:prerender": "ng run ngx-webrtc:prerender",
    "build:ssr": "ng build && ng run ngx-webrtc:server",
    "build:lib": "ng build --project ngx-webrtc-lib",
    "watch": "ng build --watch --configuration development",
    "publish": "cd ./dist/ngx-webrtc-lib && npm publish",
    "test": "ng test",
    "test:lib": "ng test --project ngx-webrtc-lib",
    "test:ci": "ng test --configuration ci",
    "lint": "ng lint",
    "postinstall": "npm ci --prefix ./projects/ngx-webrtc-lib"
  },
  "dependencies": {
    "@angular/animations": "^18.2.10",
    "@angular/cdk": "^18.2.11",
    "@angular/common": "^18.2.10",
    "@angular/compiler": "^18.2.10",
    "@angular/core": "^18.2.10",
    "@angular/forms": "^18.2.10",
    "@angular/material": "^18.2.11",
    "@angular/platform-browser": "^18.2.10",
    "@angular/platform-browser-dynamic": "^18.2.10",
    "@angular/platform-server": "^18.2.10",
    "@angular/router": "^18.2.10",
    "@angular/ssr": "^18.2.11",
    "express": "^4.18.2",
    "ngx-webrtc-lib": "^18.2.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.11",
    "@angular-eslint/builder": "18.4.0",
    "@angular-eslint/eslint-plugin": "18.4.0",
    "@angular-eslint/eslint-plugin-template": "18.4.0",
    "@angular-eslint/schematics": "18.4.0",
    "@angular-eslint/template-parser": "18.4.0",
    "@angular/cli": "^18.2.11",
    "@angular/compiler-cli": "^18.2.10",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^18.18.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "browser-sync": "^3.0.0",
    "eslint": "^8.57.0",
    "husky": "^4.3.8",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^18.2.1",
    "typescript": "~5.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
